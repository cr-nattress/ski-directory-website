# Supabase Configuration
# Get these values from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service role key (server-side only, never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Feature flag: Set to 'true' to use Supabase, 'false' for mock data
NEXT_PUBLIC_USE_SUPABASE=false

# ============================================
# Grafana Cloud Observability (Epic 25)
# ============================================
# Get these values from your Grafana Cloud account
# https://grafana.com/products/cloud/

# Loki push endpoint URL
NEXT_PUBLIC_GRAFANA_LOKI_URL=https://logs-prod-XXX.grafana.net

# Grafana Cloud username (usually a number)
NEXT_PUBLIC_GRAFANA_LOKI_USERNAME=your-username

# API token with write permissions for Loki
NEXT_PUBLIC_GRAFANA_LOKI_API_TOKEN=glc_your-token

# Application name for log labels (optional, defaults to 'ski-directory-ui')
NEXT_PUBLIC_GRAFANA_APP_NAME=ski-directory-ui
